<Window x:Class="w03p01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:w03p01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel >
        <TextBlock
            x:Name="textBlock01"
            FontSize="30pt"
            Padding="20pt">
        </TextBlock>
        <TextBox
            x:Name="textBox01"
            FontSize="30pt"
            Padding="20pt"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            SpellCheck.IsEnabled="True"
            Language="pl-PL" 
            FontFamily="Bahnschrift">
        </TextBox>
        <TextBox
            x:Name="textBox02"
            FontSize="30pt"
            Padding="20pt"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            SpellCheck.IsEnabled="True"
            Language="pl-PL" 
            FontFamily="Bahnschrift">
        </TextBox>
        <Button
            x:Name="butoon01"
          FontSize="30pt"
          Padding="20pt" 
          Click="butoon01_Click"
            >
            AKCJA
        </Button>

    </StackPanel>
    
    

</Window>
